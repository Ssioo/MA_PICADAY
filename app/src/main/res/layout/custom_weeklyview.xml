<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="8dp"
    android:paddingEnd="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="12dp"
        android:animateLayoutChanges="true"
        android:background="@drawable/shape_calendar_round_top"
        android:elevation="4dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_week_prev"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/background_transparent"
            app:srcCompat="@drawable/ic_prev" />

        <TextView
            android:id="@+id/weekview_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/scdream4"
            android:padding="8dp"
            android:text="TITLE"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/btn_week_next"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/background_transparent"
            app:srcCompat="@drawable/ic_next" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/purple"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/scdream4"
            android:gravity="center"
            android:text="월"
            android:textColor="@color/black"
            android:textSize="9sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/scdream4"
            android:gravity="center"
            android:text="화"
            android:textColor="@color/black"
            android:textSize="9sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/scdream4"
            android:gravity="center"
            android:text="수"
            android:textColor="@color/black"
            android:textSize="9sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/scdream4"
            android:gravity="center"
            android:text="목"
            android:textColor="@color/black"
            android:textSize="9sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/scdream4"
            android:gravity="center"
            android:text="금"
            android:textColor="@color/black"
            android:textSize="9sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/scdream4"
            android:gravity="center"
            android:text="토"
            android:textColor="@color/black"
            android:textSize="9sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/scdream4"
            android:gravity="center"
            android:text="일"
            android:textColor="@color/black"
            android:textSize="9sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/purple"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/weekview_day_ofmon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/scdream4"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/weekview_day_oftue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/scdream4"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/weekview_day_ofwed"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/scdream4"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/weekview_day_ofthr"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/scdream4"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/weekview_day_offri"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/scdream4"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/weekview_day_ofsat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/scdream4"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/weekview_day_ofsun"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/scdream4"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="9sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/weekview_day"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/shape_calendar_round_bottom"
        android:elevation="5dp"
        android:numColumns="7"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/week_list_monday"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <RelativeLayout
            android:id="@+id/week_list_tuesday"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <RelativeLayout
            android:id="@+id/week_list_wednesday"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <RelativeLayout
            android:id="@+id/week_list_thursday"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <RelativeLayout
            android:id="@+id/week_list_friday"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <RelativeLayout
            android:id="@+id/week_list_saturday"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <RelativeLayout
            android:id="@+id/week_list_sunday"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>