<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/enddate_deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/scdream4"
            android:textAlignment="textEnd"
            app:layout_constraintBottom_toBottomOf="@+id/text_end_month_deadline"
            app:layout_constraintEnd_toStartOf="@+id/endtime_deadline"
            app:layout_constraintTop_toTopOf="@+id/text_end_month_deadline" />

        <TextView
            android:id="@+id/text_end_month_deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/scdream4"
            android:text="종료"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/endtime_deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/scdream4"
            android:textAlignment="textEnd"
            app:layout_constraintBottom_toBottomOf="@+id/text_end_month_deadline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_end_month_deadline" />
    </android.support.constraint.ConstraintLayout>

</FrameLayout>