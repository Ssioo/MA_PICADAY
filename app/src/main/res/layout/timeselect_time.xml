<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/startdate_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/scdream4"
            android:textAlignment="textEnd"
            app:layout_constraintBottom_toBottomOf="@+id/text_start_month_time"
            app:layout_constraintEnd_toStartOf="@+id/starttime_time"
            app:layout_constraintTop_toTopOf="@+id/text_start_month_time" />

        <TextView
            android:id="@+id/starttime_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/scdream4"
            android:textAlignment="textEnd"
            app:layout_constraintBottom_toBottomOf="@+id/text_start_month_time"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_start_month_time" />

        <TextView
            android:id="@+id/enddate_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/scdream4"
            android:textAlignment="textEnd"
            app:layout_constraintBottom_toBottomOf="@+id/text_end_month_time"
            app:layout_constraintEnd_toStartOf="@+id/endtime_time"
            app:layout_constraintTop_toTopOf="@+id/text_end_month_time" />

        <TextView
            android:id="@+id/endtime_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/scdream4"
            android:textAlignment="textEnd"
            app:layout_constraintBottom_toBottomOf="@+id/text_end_month_time"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_end_month_time" />

        <TextView
            android:id="@+id/text_start_month_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/scdream4"
            android:text="시작"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/schedule_title_monthly" />

        <TextView
            android:id="@+id/text_end_month_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/scdream4"
            android:text="종료"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_start_month_time" />
    </android.support.constraint.ConstraintLayout>

</FrameLayout>